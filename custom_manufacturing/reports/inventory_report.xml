<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_inventory">
        <t t-call="web.basic_layout">
            <div class="page">
                <h2>Inventory Report</h2>
                <p><strong>Inventory Reference:</strong> <span t-field="o.name"/></p>
                <p><strong>Location:</strong> <span t-field="o.location_id.name"/></p>
                <p><strong>Product:</strong> <span t-field="o.product_id.name"/></p>
                <p><strong>Quantity:</strong> <span t-field="o.quantity"/></p>
                <p><strong>Status:</strong> <span t-field="o.state"/></p>
            </div>
        </t>
    </template>
</odoo>
